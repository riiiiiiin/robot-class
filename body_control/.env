# 是否启用真实舵机控制（True为启用，False为模拟模式）
do_gesture=True

# 舵机串口配置
SERVO_PORT=/dev/ttyUSB0
SERVO_BAUDRATE=115200

# 右臂舵机配置
RIGHT_ARM_SERVO_ID=101
RIGHT_ARM_LIMIT_SPEED=3.0

# 左臂舵机配置  
LEFT_ARM_SERVO_ID=103
LEFT_ARM_LIMIT_SPEED=3.0

# 头部旋转舵机配置
HEAD_ROTATE_SERVO_ID=104
HEAD_ROTATE_LIMIT_SPEED=1.2
HEAD_ROTATE_SOFT_LIMIT_MIN=-40
HEAD_ROTATE_SOFT_LIMIT_MAX=40

# 头部俯仰舵机配置
HEAD_TILT_SERVO_ID=102
HEAD_TILT_LIMIT_SPEED=1.5
HEAD_TILT_SOFT_LIMIT_MIN=-10
HEAD_TILT_SOFT_LIMIT_MAX=10